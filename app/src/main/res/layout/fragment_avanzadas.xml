<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#bbbbbb"
    tools:context="com.example.cooking.Fragments.Avanzadas" >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#424242">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:text="Por DuraciÃ³n:"
                android:id="@+id/textView"
                android:gravity="center_vertical"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:paddingLeft="10dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spDuracionAvanzadas" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:text="Por Dificultad:"
                android:id="@+id/textView2"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spDificultadAvanzadas" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:text="Por Zona:        "
                android:id="@+id/textView3"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"  />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spZonaAvanzadas" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:text="Por Alimento:  "
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:textStyle="bold|italic"
                android:gravity="center_vertical"
                android:paddingLeft="10dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spAlimentoAvanzadas" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:text="Tipo Alimento:    "
                android:id="@+id/textView5"
                android:textSize="20dp"
                android:gravity="center_vertical"
                android:textStyle="bold|italic"
                android:paddingLeft="10dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spTipoAlimentoAvanzadas"
                android:textAlignment="center"
                android:gravity="center_vertical|center|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:text="Buscar"
                android:id="@+id/button2"
                android:textColor="#ffffff"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>

        -
    </LinearLayout>
